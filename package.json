{
    "name": "muse-typescript",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "engines": {
        "node": "12.x"
    },
    "scripts": {
        "migration": "nodemon --watch ./src --exec ts-node src/migrations/index.ts NODE_ENV=dev",
        "start": "nodemon --watch ./src --exec ts-node src/index.ts",
        "build": "tsc",
        "prod": "npm run build && node build/src/index.js",
        "react_link": "rm -rf src/public/site/react_assets/* && rm -rf src/public/admin/admin-ui/* && node react-ui/react_includer/index.js",
        "generate": "node builder/index.js",
        "db:migrate": "ts-node ./migrations.js",
        "db:drop": "dropdb eco_dev",
        "db:create": "createdb -O eco eco_dev && psql -d eco_dev -c 'CREATE EXTENSION unaccent;\n CREATE TEXT SEARCH CONFIGURATION unaccent_portuguese ( copy=portuguese ); \nALTER TEXT SEARCH CONFIGURATION unaccent_portuguese ALTER MAPPING FOR hword, hword_part, word WITH unaccent, portuguese_stem;'",
        "db:test:drop": "dropdb eco_test",
        "db:test:create": "createdb -O eco eco_test && psql -d eco_test -c 'CREATE EXTENSION unaccent;\n CREATE TEXT SEARCH CONFIGURATION unaccent_portuguese ( copy=portuguese ); \nALTER TEXT SEARCH CONFIGURATION unaccent_portuguese ALTER MAPPING FOR hword, hword_part, word WITH unaccent, portuguese_stem;'",
        "db:test:migrate": "NODE_ENV=test ts-node ./migrations.js",
        "db:test:seed": "NODE_ENV=test ts-node ./seeds.js",
        "db:dev:seed": "NODE_ENV=development ts-node ./seeds.js",
        "test": "jest --detectOpenHandles --maxWorkers=10 --forceExit",
        "test:watch": "jest --watch --detectOpenHandles --maxWorkers=10 --forceExit",
        "heroku-postbuild": "yarn db:migrate NODE_ENV=production && NODE_ENV=production yarn ts-node ./seeds"
    },
    "dependencies": {
        "add": "^2.0.6",
        "axios": "^0.19.0",
        "bcrypt": "^3.0.7",
        "bluebird": "^3.5.5",
        "body-parser": "^1.19.0",
        "connect-redis": "^4.0.4",
        "cookie-parser": "^1.4.4",
        "cpf-check": "^3.0.0",
        "cpf-cnpj-validator": "^0.1.0",
        "date-and-time": "^0.10.0",
        "express": "^4.17.1",
        "express-handlebars": "^3.1.0",
        "express-http-to-https": "^1.1.4",
        "express-session": "^1.17.0",
        "handlebars": "4.5.3",
        "ioredis": "^4.14.1",
        "jsonwebtoken": "^8.5.1",
        "knex": "~0.20.4",
        "module-alias": "^2.2.1",
        "moment-timezone": "^0.5.26",
        "mysql": "^2.17.1",
        "node-fs-extra": "^0.8.2",
        "node-nlp": "^3.10.2",
        "nodemon": "^1.19.2",
        "passport": "0.4.1",
        "passport-local": "^1.0.0",
        "react-dom": "16.12.0",
        "require.all": "^2.0.4",
        "slug": "^2.1.0",
        "striptags": "^3.1.1",
        "validar-cpf": "^2.1.1",
        "validate.js": "^0.13.1",
        "xml-js": "^1.6.11",
        "pg": "7.14.0",
        "ts-node": "8.6.2",
        "typescript": "3.7.5"
    },
    "devDependencies": {
        "@types/express-handlebars": "^3.1.0",
        "@types/axios": "^0.14.0",
        "@types/bcrypt": "^3.0.0",
        "@types/connect-redis": "^0.0.13",
        "@types/cookie-parser": "^1.4.2",
        "@types/date-and-time": "^0.6.0",
        "@types/express": "^4.17.1",
        "@types/express-session": "^1.15.16",
        "@types/hapi__joi": "^16.0.11",
        "@types/ioredis": "^4.14.6",
        "@types/jest": "25.1.2",
        "@types/jsonwebtoken": "^8.3.4",
        "@types/passport": "^1.0.2",
        "@types/passport-local": "^1.0.33",
        "@types/react-dom": "16.9.4",
        "@types/slug": "^0.9.1",
        "@types/supertest": "2.0.8",
        "cross-env": "^7.0.0",
        "dotenv": "^8.1.0",
        "jest": "25.1.0",
        "supertest": "4.0.2",
        "ts-jest": "25.2.0"
    }
}
